@section Scripts
    {
    <script src="~/Js/jquery-ui.js"></script>
    <script src="~/Js/daterangepicker/moment.min.js"></script>
    <script src="~/Js/daterangepicker/daterangepicker.js"></script>
     <script src="/js/select2.min.js"></script>

    <script type="text/javascript">
        $(document).ready(function () {
           if (@Model.Id>0){
                participantdetails();
           }            
        });
        $(function() {
            $('#VisitDateFrom,#VisitDateTo').daterangepicker({
                autoApply: true,
                showDropdowns: true,
                singleDatePicker: true,
                opens: 'left',
                locale: { format: 'DD/MM/YYYY' },
            }, function(start, end, label) {
                //console.log("A new date selection was made: " + start.format('YYYY-MM-DD') + ' to ' + end.format('YYYY-MM-DD'));
            });

            // Notification("warning", "warning Title", "warning Message section");
            //Notification("success", "success Title", "success Message section");
            //Notification("error", "error Title", "error Message section");
            //Notification("info", "info Title", "info Message section");
            $(".custom-file-input").on("change", function() {
                var filename = $(this).val().split('\\').pop();
                $(this).next('.custom-file-label').html(filename);
            });
        });

        function participantdetails(selId) {
            var bookingid = @Model.Id;
            //var bookingid = 2;
            if (bookingid > 0) {
                $.getJSON('/Ajax/LoadParticipants', { Type: "GetStateByCountryID", RefId: bookingid }, function(data) {
                    var item = "";
                    $.each(data, function(i, res) {
                        console.log(res);
                        item += '<tr><td>' + data[i].id + '</td><td><a title="Edit" href="javascript:void(0);" onclick="EditBookingDetail(' + res.id + ');"><i class="fas fa-edit"></i></a></td><td>'+res.visitorTypeId+'</td><td>' + res.isHospitalityProjectId + '</td><td>' + res.name + '</td><td>' + res.phone + '</td><td>' + res.email + '</td><td>' + res.company + '</td><td>' + res.name + '</td><td>' + res.document + '</td><td>' + res.flightStartDate + '</td><td>' + res.flightReturnDate + '</td><td>' + res.company + '</td></tr>';
                    });
                    $("#tblactivitydetail").html(item);
                    if (selId > 0) { $("#tblactivitydetail").val(selId); };
                });
            }
        }
        $('#jaqpromoproducts').select2({ theme: "classic", closeOnSelect: true, allowClear: true, maximumSelectionLength: 0 });

         function AddBookingDetail() {
            var visitortype =parseInt($("#visitortypeid").val())||0, 
            name = $.trim($("#txt_name").val()) || '',
            phone = $.trim($("#txt_phone").val()) || '', email = $.trim($("#txt_email").val()) || '', company = $.trim($("#txt_company").val()) || '',
            jaqprodprom=$("#jaqpromoproducts").val(),            
            document = $("#txt_document").val();
            if(visitortype<=0){
                Notification("error", title = "", msg = "Visitor Type is required.");
                $("#visitortypeid").focus();
            }            
            else if(name==""){
                Notification("error", title = "", msg = "Name is required.");
                $("#txt_name").focus();
            }            
            else if (phone == ""){
                Notification("error", title = "", msg = "Phone is required.");
                $("#txt_phone").focus();
            }
            else if (email == ""){
                Notification("error", title = "", msg = "Email is required.");
                $("#txt_email").focus();
            }
            else if (company == ""){
                Notification("error", title = "", msg = "Company is required.");
                $("#txt_company").focus();
            }
            else if (jaqprodprom == ""){
                Notification("error", title = "", msg = "Jaquar product promoting is required.");
                $("#jaqpromoproducts").focus();
            }
            else {
                $(".btnSaveBookingDetail").attr('disabled');
                var _formData = new FormData();
                _formData.append("Id",parseInt($("#hdnBookingDetailId").val())||0);
                _formData.append("BookingId", @Model.Id);
                _formData.append("VisitorTypeId", visitortype);
                _formData.append("Name", name);
                _formData.append("Email", email);
                _formData.append("Phone", phone);
                _formData.append("Company", company);
                _formData.append("JaquarProductPromoting", jaqprodprom);
                _formData.append("IsHospitalityProject", $("#ddHospitalityProject").val());
                _formData.append("Document", document);
                _formData.append("FlightStartDate", $("#txt_flightstarddt").val());
                _formData.append("FlightReturnDate", $("#txt_flightreturnddt").val());
                //var myfile = document.getElementById(imageid);
                //if ($("#" + imageid)[0].files.length > 0) {
                //    for (var i = 0; i < $("#" + imageid)[0].files.length; i++)
                //        _formData.append("DocumentFile", $("#" + imageid)[0].files[i]);
                //}
                $.ajax({
                    type: "POST",
                    url: "/admin/Participant/AddParticipant",
                    data: _formData,
                    contentType: false,
                    processData: false,
                    success: function (data) {
                        if (data.success) {
                            Notification('success', '', data.message);
                            ClearBookingdetail();
                            ListAllBookingDetails();
                        }
                        else {
                            Notification('error', '', data.message);
                        }
                        $(".btnSaveBookingDetail").removeAttr('disabled');
                    }
                });
            }
        }

        function EditBookingDetail(Id) {
            $('.nav-pills a[href="#bookingdetail"]').tab('show');
            $.ajax({
                type: "GET",
                url: "/Ajax/GetParticipantById",
                data: "RefId=" + Id,
                success: function(data) {
                    var jaqprodprom =data.jaquarProductPromoting!=null? data.jaquarProductPromoting.split(','):"";
                    console.log("Data=" + data);
                    if (data != null) {
                        $("#hdnBookingDetailId").val(data.id)
                        $("#visitortypeid").val(data.visitorTypeId);
                        $("#txt_name").val(data.name);
                        $("#txt_phone").val(data.phone);
                        $("#txt_email").val(data.email);
                        $('#jaqpromoproducts').val(jaqprodprom).trigger('change');
                        //$("#jaqpromoproducts").val(data.jaqpPomoProducts);
                        $("#ishospitalityprojectid").val(data.isHospitalityProjectId);
                        $("#txt_company").val(data.company);
                        $("#txt_document").val(data.document);
                        $("#txt_flightstarddt").val(data.flightStartDate);
                        $("#txt_flightreturnddt").val(data.flightReturnDate);

                    }
                }
            });
        }
    </script>
}