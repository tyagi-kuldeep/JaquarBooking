                            <div class="row">
                                <div class="col-md-6">
                                   <div class="form-group row">
                                       <label>Visitor Type</label>
                                      <div class="col-sm-8">
                                      <select class="form-control form-control-sm" id="visitortypeid">
                                       @*   <option value="0">-- Select --</option>*@
                                             <option value="1" selected="selected">Dealer</option>
                                             <option value="2">Architect</option>
                                       </select>
                                      </div>
                                   </div>
                                </div>
                                <div class="col-md-6">
