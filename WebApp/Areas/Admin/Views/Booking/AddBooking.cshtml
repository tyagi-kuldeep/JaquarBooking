                                                                        </div>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="col-md-6">
                                                            <div class="form-group row">
                                                                @Html.LabelFor(m => m.VisitDateTo, new { @class = "col-sm-4 col-form-label" })
                                                                <div class="col-sm-8">
                                                                    <div class="input-group">
                                                                        @Html.TextBoxFor(m => @m.VisitDateTo, new { @class = "form-control form-control-sm jqDate"})
                                                                        <div class="input-group-append">
                                                                            <span class="input-group-text cldatepicker"><a class="cldatepicker" href="javacsript:void(0);"><i class="far fa-calendar-alt"></i></a></span>
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="row">
                                                        <div class="col-md-6">
                                                            <div class="form-group row">
                                                                @Html.LabelFor(m => m.Description, new { @class = "col-sm-4 col-form-label" })
                                                                <div class="col-sm-8">
                                                                    @Html.TextBoxFor(m => m.Description, new { @class = "form-control form-control-sm" })
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="card-footer clearfix">
                                                </div>
                                            </div>

                                        </div>
                                    </div>

                                </div>
                            </div>

                        </form>
                        <div id="records">
                                    <table id="table table-sm table-bordered table-striped table-responsive-lg">
                                           <thead class="table-primary">
                                            <tr>
                                                <th>Sr. No.</th>
                                                <th>#</th>
                                                <th>Visitor Type</th>
                                                <th>Is Hospitality</th>
                                                <th>Name</th>
                                                <th>ContactNo.</th>
                                                <th>Email</th>
                                                <th>Company</th>
                                                <th>Jaquar Product Promoting</th>
                                                <th>Doc.</th>
                                                 <th>Flight Start Date</th>
                                                 <th>Flight Return Date</th>
                                                <th>Created On</th>
                                            </tr>
